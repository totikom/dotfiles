bindsym $mod+b exec --no-startup-id echo -e "power on\nconnect {{buds_address}}" | bluetoothctl
bindsym $mod+shift+b exec --no-startup-id echo -e "disconnect {{buds_address}}" | bluetoothctl

bindsym $mod+n exec --no-startup-id echo -e "power on\nconnect {{flip_address}}" | bluetoothctl
bindsym $mod+shift+n exec --no-startup-id echo -e "disconnect {{flip_address}}" | bluetoothctl
